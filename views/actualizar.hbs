<div class="container">

<div class="text-center m-5">
    <hr>
    <h1>
        Actualizar Producto
    </h1>
    <hr>
</div>

<div class="row">
<form action="./{{id}}" method="post">


    <div class="mb-3 row">
        <label for="nombre" class="col-sm-2 col-form-label">Nombre: </label>
    <div class="col-sm-10">
        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre" value="{{nombre}}">
    </div>
    </div>

    <div class="mb-3 row">
        <label for="marca" class="col-sm-2 col-form-label">Marca </label>
    <div class="col-sm-10">
        <input type="text" class="form-control" name="marca" id="marca" placeholder="marca" value="{{marca}}">
    </div>
    </div>

    <div class="mb-3 row">
        <label for="precio" class="col-sm-2 col-form-label">Precio </label>
    <div class="col-sm-10">
        <input type="number" class="form-control" name="precio" id="precio" placeholder="precio"
        value="{{precio}}">
    </div>
    </div>




    <div class="mb-3 text-center">
                <input type="submit" class="button btn btn-success w-50 p-2" value="Enviar Datos">
    </div>

    <div class="text-center">
        <h2 class="text-success">
            {{ validacion }}
        </h2>
    </div>
</form>

</div>
</div>
